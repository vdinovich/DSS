@model IEnumerable<DTS.Models.Visits_Agency>

@{
    ViewBag.Title = "Select_Agencies";
}
<h1 style="text-align:center;color:darkorange">List of Visits Agencies</h1>

@Html.ActionLink("<-- Back", "Agency_Insert", "Home", "", new { id = "back" })  <br /><br /><br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_of_Visit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Findings_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Findings_Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Corrective_Actions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Report_Posted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_of_Visit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Findings_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Findings_Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Corrective_Actions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Report_Posted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit_Agency", "Edit", new { id = item.Id }, "") |
            @Html.ActionLink("Details", "Agency_Details", "Details", new { id = item.Id }, "") |
            @Html.ActionLink("Delete", "Agency_Delete", "Delete", new { id = item.Id }, "")
        </td>
    </tr>
    }

</table>


<style>
    #back {
        text-decoration: none;
        border: 2px solid darkorange;
        border-radius: 25px;
        padding: 14px;
        color: darkorange;
    }

        #back:hover {
            background-color: darkorange;
            color: white;
        }
</style>