@model DTS.Models.Critical_Incidents

@{
    ViewBag.Title = "Incident_Delete";
}

<h2 style="text-align:center">Critical Incidents - Delete Form</h2>

<h1 style="text-align:center;color:white;background-color:black">Are you sure you want to delete this record?</h1>
<div id="center">
    <h1 style="text-align:center;color:darkorange">Critical Incidents <br /> ID - @Html.DisplayFor(id => id.id)</h1>
    <hr />

    <dl class="dl-horizontal">
        <dt>
           <label>Date:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            <label>CI Form Number:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CI_Form_Number)
        </dd>

        <dt>
            <label>CI Category Type:</label>
        </dt>

        <dd>
            @ViewBag.list[1]
        </dd>

        <dt>
            <label>Location:</label>
        </dt>

        <dd>
            @ViewBag.list[0]
        </dd>

        <dt>
            <label>Brief Description:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brief_Description)
        </dd>

        <dt>
            <label>MOH Notified:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOH_Notified)
        </dd>

        <dt>
            <label>Police Notified:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Police_Notified)
        </dd>

        <dt>
            <label>POAS Notified:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.POAS_Notified)
        </dd>

        <dt>
            <label>Care Plan Updated:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Care_Plan_Updated)
        </dd>

        <dt>
            <label>Quality Improvement Actions:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quality_Improvement_Actions)
        </dd>

        <dt>
            <label>MOHLTC Follow Up:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOHLTC_Follow_Up)
        </dd>

        <dt>
            <label>CIS Initiated:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CIS_Initiated)
        </dd>

        <dt>
            <label>Follow Up Amendments:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Follow_Up_Amendments)
        </dd>

        <dt>
            <label>Risk Locked:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Risk_Locked)
        </dd>

        <dt>
            <label>File Complete:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.File_Complete)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="cent" class="form-actions no-color">
            <input id="centBtn" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }
</div>

@Html.ActionLink("Back to All Records", "Select_Incidents", "Select", "", new { id = "back" })


<style>
    #cent, #centBtn {
        width: 200px;
        margin: auto;
    }

    #btn {
        font-size: large;
    }

    #back {
        float: left;
        border: 2px solid blue;
        border-radius: 22px;
        position: absolute;
        padding: 11px;
        text-decoration: none;
        background-color: aqua;
        color: brown
    }

        #back:hover {
            text-decoration: none;
            background-color: black;
            color: white
        }

    #center {
        width: 470px;
        margin: auto;
        border: 1px black solid;
        position: relative;
