

<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            Location
        </th>
        <th>
            Status
        </th>
        <th>
            Date Complain Received
        </th>
        <th>
            Complain Filed By
        </th>
        <th>
            Type of Complaint
        </th>
        <th>
            Complaint Resolved
        </th>
        <th>
            Description Outcome
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DTS.Models.Privacy_Complaints>)ViewBag.List;
        foreach (var item in list)
        {
        <tr>
            <td style="width:300px">
                @names[item.Location - 1]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Complain_Received)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complain_Filed_By)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_of_Complaint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Complaint_Resolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description_Outcome)
            </td>
            <td id="btns">
                @Html.ActionLink("Edit", "Edit_Privacy_Complaints", "Edit", new { id = item.id }, new { @class = "b" })
                @Html.ActionLink("Details", "Privacy_Complaints_Details", "Details", new { id = item.id }, new { @class = "b" })
                @Html.ActionLink("Delete", "Privacy_Complaints_Delete", "Delete", new { id = item.id }, new { @class = "b" })
            </td>
        </tr>
        }
    }

</table>
<style>
    #btns {
        width: 300px;
    }

    .b {
        border: 1px solid blue;
        border-radius: 6px;
        color: darkred;
        text-decoration: none;
        padding: 6px;
        font-size: medium;
    }

        .b:hover {
            color: red;
            text-decoration: none;
            background-color: blue;
        }
</style>






