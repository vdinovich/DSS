




<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr style="width:200px">
        <th>
            Date Accident
        </th>
        <th>
            Location
        </th>
        <th>
            Date of Incident
        </th>
        <th>
            Employee Initials
        </th>
        <th>
            Position
        </th>
        <th>
            Time of Incident
        </th>
        <th>
            Shift
        </th>
        <th>
            Home Area
        </th>
        <th>
            Injury Related
        </th>
        <th>
            Type of Injury
        </th>
        <th>
            Details of Incident
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DTS.Models.Not_WSIBs>)ViewBag.List;
        foreach (var item in list)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @names[item.Location - 1]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_Incident)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Initials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time_of_Incident)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Home_Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Injury_Related)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_of_Injury)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details_of_Incident)
            </td>
            <td>
                <div style="width:300px;margin-top:15px">
                    @Html.ActionLink("Edit", "Edit_Not_WSIB", "Edit", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Details", "Not_WSIB_Details", "Details", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Delete", "Not_WSIB_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                </div>
            </td>
            </tr>
        }
    }

</table>
<style>
    .b {
        border: 1px solid blue;
        border-radius: 6px;
        color: darkred;
        text-decoration: none;
        padding: 6px;
        font-size: medium;
    }

        .b:hover {
            color: red;
            text-decoration: none;
            background-color: blue;
        }
</style>








