@model DTS.Controllers.WorTabs
@{
    ViewBag.Title = "WOR Tabs Forms";
}

<h4 style="text-align:center;font-weight:bold;color:red">@ViewBag.ErrorMsg</h4>
<br />
<br />
@using (Html.BeginForm("WOR_Tabs", "Home", FormMethod.Post))
{
    <div id="container">
        <ul style="font-weight:bold;font-family:'Palatino Linotype';font-size:larger;list-style-type: none">
            <li>@Html.ListBoxFor(model => model.Name, new SelectList(Model.ListForms, "Value", "Text", Model.ListForms.SelectedValue), new { id = "ref" })</li>
        </ul>
    </div>

    <div id="rightBox">
        <ul style="font-size: xx-large;margin-right:2px" class="nav nav-justified badge">
            <li><button class="btn add-on" style="color:darkgoldenrod;font-size:medium;font-weight:bold" name="btn-summary" type="submit">SUMMARY</button></li>
            <li><p  class="btn btn-dropbox" name="btn-insert" style="width:220px;background-color:whitesmoke; color:darkgoldenrod;font-size:medium;font-weight:bold" id="hiddenShow">NEW COMPLIENCE</p></li>
            <li><button class="btn btn-dropbox" name="btn-export" style="color: darkgoldenrod; font-size: medium; font-weight: bold" type="submit">EXPORT DATA</button></li>
        </ul>
        <ul class="nav nav-justified" id="btns">
            <li><button hidden type="submit"></button></li>
            <li id="ll" style="">
                <button id="b1" class="btn btn-primary" name="btn-insert" style="margin: -15px 0 0 65px" type="submit">Input New Record</button>
                <button id="b2" class="btn btn-primary" style="margin:-15px 0 0 3px" name="btn-list">All Records</button>
            </li>
            <li></li>
            <br />
            <li id="d" style="font-family:'Palatino Linotype';font-size:medium">Date range:</li>
            <li style="color: darkorange;font-size: medium">Start:&nbsp; @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "", @id = "start" } })</li>
            <li style="color: darkorange;font-size: medium">End:&nbsp;   @Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "", @id = "end" } })</li>
        </ul>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#ll").hide();
        $("#hiddenShow").click(function () {
            var sel = document.getElementById("ll").style;
            if (sel.display == "none")
            $("#ll").show("slow");
             else $("#ll").hide("slow");
        });
    });

</script>

<style>
    li #start, #end {
        margin: -50px 0 0 0;
    }

    #b1, #b2 {
        height: 30px;
        width: 135px;
    }

    button {
        width: 150px;
        height: 40px;
        font-size: larger;
        font-weight: bold;
    }

    #btns {
        padding: 10px;
        font-size: x-large;
    }

    #rightBox {
        border: 1px solid silver;
        margin: 0 0 0 370px;
        width: 900px;
        padding: 22px;
        height: 550px
    }

    #container {
        text-align: left;
        position: absolute;
        height: 550px;
        margin-right: 22px;
        padding: 22px;
        margin: 0 0 0 -50px;
    }

    #ref {
        margin: -20px 0 0 -60px;
        width: 900px;
        padding: 23px;
        border: 4px solid darkorange;
        border-radius: 12px;
        text-decoration: none;
        color: mediumslateblue;
        height: 540px;
    }

    /* #ref:hover {
            color: darkorange;
        }*/
</style>