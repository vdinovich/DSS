@model DTS.Controllers.WorTabs
@{
    ViewBag.Title = "WOR Tabs Forms";
}

<h4 style="text-align:center;font-weight:bold;color:red">@ViewBag.ErrorMsg</h4>
<br />
<br />
@using (Html.BeginForm("WOR_Tabs", "Home", FormMethod.Post))
{
    <div id="container">
        <ul style="font-weight:bold; font-family:'Palatino Linotype';font-size:x-large;list-style-type: none">
            <li>@Html.ListBoxFor(model => model.Name, new SelectList(Model.ListForms, "Value", "Text", Model.ListForms.SelectedValue), new { id = "ref" })</li>
        </ul>
    </div>

    <div id="rightBox">
        <ul style="font-size: xx-large;margin-right:2px" class="nav nav-justified badge">
            <li><button class="btn add-on" style="color:darkgoldenrod;font-size:medium;font-weight:bold" name="btn-summary" type="submit">SUMMARY</button></li>
            <li><button class="btn btn-dropbox" name="btn-insert" style="width:220px; color:darkgoldenrod;font-size:medium;font-weight:bold"type="submit">NEW COMPLIENCE</button></li>
            <li><button class="btn btn-dropbox" name="btn-export" style="color: darkgoldenrod; font-size: medium; font-weight: bold" type="submit">EXPORT DATA</button></li>
        </ul>
        <ul class="nav nav-justified" id="btns">
      @*<li><button hidden type="submit"></button></li>
        <li><button class="btn btn-primary" name="btn-insert" style="margin:-30px 0 0 130px" type="submit">Input New Record</button></li>
        <li><button style="float:right" class="btn btn-primary" name="btn-list">All Records</button></li>*@
            <li style="font-family:'Palatino Linotype';font-size:larger">Date range:</li>
            <li style="color:darkorange">Start:&nbsp; @Html.EditorFor(model=>model.Start, new { @class = "form-control" })</li>
            <li style="color:darkorange">End:&nbsp;   @Html.EditorFor(model=>model.End, new { @class="form-control"})</li>
        </ul>
    </div>
  }

<style>
    button {
        width: 150px;
        height: 40px;
        font-size: larger;
        font-weight: bold;
    }

    #btns {
        padding: 10px;
        font-size: x-large;
    }

    #rightBox {
        border: 1px solid silver;
        margin: 0 0 0 370px;
        width: 900px;
        padding: 22px;
        height: 550px
    }

    #container {
        text-align: left;
        position: absolute;
        height: 550px;
        margin-right: 22px;
        padding: 22px;
        margin: 0 0 0 -50px;
    }

    #ref {
        width: 900px;
        padding: 23px;
        border: 4px solid darkorange;
        border-radius: 12px;
        text-decoration: none;
        color: mediumslateblue;
        height: 550px;
    }

       /* #ref:hover {
            color: darkorange;
        }*/
</style>