
<table style="font-size:medium;font-family:'Palatino Linotype'" class="table table-bordered">
    <tr>
        <th>
            Date 
        <th>
            Location
        </th>
        <th>
            Accruals
        </th>
        <th>
            Category
        </th>
        <th>
            Details
        </th>
        <th>
            Lessons Learned
        </th>
        <th>
            Outcome
        </th>
        <th>
            Status
        </th>
        <th>
            Union
        </th>
    </tr>
    @{
        string[] names = ViewBag.Names;
        var list = (List<DTS.Models.Labour_Relations>)ViewBag.List;
        foreach (var item in list)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date) 
                </td>
                <td>
                    @names[item.Location - 1];
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accruals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lessons_Learned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outcome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Union)
                </td>
                <td>
                <td id="btns">
                    @Html.ActionLink("Edit", "Edit_Labour", "Edit", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Details", "Labour_Details", "Details", new { id = item.Id }, new { @class = "b" })
                    @Html.ActionLink("Delete", "Labour_Delete", "Delete", new { id = item.Id }, new { @class = "b" })
                </td>
            </tr>
        }
    }

</table>
<style>
    .b {
        border:1px solid blue;
        border-radius: 6px;
        color: darkred;
        text-decoration: none;
        padding: 6px;
        font-size:medium;
    }

        .b:hover {
            color: red;
            text-decoration: none;
            background-color: blue;
        }
</style>

