@model DTS.Models.Immunization

@{
    ViewBag.Title = "Immunization_Insert";
}

<h1 style="color:darkorange;font-weight:bold;text-align:center"> Entry form - Immunization </h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ActionLink("Show All Records", "Select_Immunization", "Select", "", new { id = "select" })
    <br />
    <br />
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">
                Location
            </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Location, ViewBag.locations as SelectList, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Total number of residents in the community from October 1, 2021 to December 15, 2021
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numb_Res_Comm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Numb_Res_Comm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Total number of residents immunized
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numb_Res_Immun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Numb_Res_Immun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Total number of residents not immunized
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numb_Res_Not_Immun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Numb_Res_Not_Immun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                % of residents immunized
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Per_Res_Immun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Per_Res_Immun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                % of residents not immunized
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Per_Res_Not_Immun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Per_Res_Not_Immun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
